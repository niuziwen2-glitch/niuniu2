                img: "https://images.unsplash.com/photo-1523318139815-9171b7d131c0?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=400&q=80",
                desc: "Table Mountain majesty, coastal drives, and vibrant cultural fusion.",
                coords: { lat: -33.9249, lng: 18.4241 },
                days: {
                    "Day 1": ["Table Mountain", "V&A Waterfront", "Robben Island", "Sea Point Promenade"],
                    "Day 2": ["Cape of Good Hope", "Penguin Colony", "Stellenbosch Vineyards", "Kirstenbosch Gardens"],
                    "Day 3": ["Bo-Kaap", "Muizenberg Beach", "Kalk Bay", "Chapman's Peak Drive"]
                }
            }
        ];

        let currentMap = null;
        let markers = [];

        function init() {
            const grid = document.getElementById('cityGrid');
            grid.innerHTML = cities.map(city => `
                <div class="city" onclick="openModal('${city.name}')">
                    <img src="${city.img}" alt="${city.name}" class="city-img">
                    <div class="city-info">
                        <div class="city-name">${city.name}</div>
                        <div class="city-desc">${city.desc}</div>
                        <div class="trip-tag">3-Day Itinerary</div>
                    </div>
                </div>
            `).join('');
        }

        function openModal(cityName) {
            const city = cities.find(c => c.name === cityName);
            const modal = document.getElementById('modal');
            const content = document.getElementById('modalContent');
            
            let html = `<div class="modal-title">${city.name}</div>`;
            
            html += `<div class="tabs">`;
            Object.keys(city.days).forEach((day, i) => {
                html += `<div class="tab ${i === 0 ? 'active' : ''}" onclick="showDay('${day}', '${cityName}')">${day}</div>`;
            });
            html += `</div>`;
            
            Object.keys(city.days).forEach((day, i) => {
                html += `<div class="day-content ${i === 0 ? 'active' : ''}" id="content-${day}-${cityName.replace(/\s/g, '-')}">
                    <ul class="itinerary">`;
                city.days[day].forEach(item => {
                    html += `<li>${item}</li>`;
                });
                html += `</ul></div>`;
            });
            
            content.innerHTML = html;
            initMap(city);
            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('modal').style.display = 'none';
            document.body.style.overflow = 'auto';
            if (currentMap) {
                currentMap.remove();
                currentMap = null;
            }
        }

        function showDay(day, cityName) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            
            document.querySelectorAll('.day-content').forEach(d => d.classList.remove('active'));
            document.getElementById(`content-${day}-${cityName.replace(/\s/g, '-')}`).classList.add('active');
            
            const city = cities.find(c => c.name === cityName);
            updateMap(city, day);
        }

        function initMap(city) {
            document.getElementById('mapLoader').style.display = 'flex';
            
            if (currentMap) currentMap.remove();
            markers = [];
            
            currentMap = L.map('map').setView([city.coords.lat, city.coords.lng], 11);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap'
            }).addTo(currentMap);
            
            const cityMarker = L.marker([city.coords.lat, city.coords.lng]).addTo(currentMap);
            cityMarker.bindPopup(`<b>${city.name}</b><br>City Center`).openPopup();
            markers.push(cityMarker);
            
            updateMap(city, "Day 1");
            
            setTimeout(() => {
                document.getElementById('mapLoader').style.display = 'none';
            }, 800);
        }

        function updateMap(city, day) {
            markers.slice(1).forEach(m => m.remove());
            markers = [markers[0]];
            
            const attractions = city.days[day];
            const baseLat = city.coords.lat;
            const baseLng = city.coords.lng;
            const spread = 0.12;
            
            attractions.forEach((attr, i) => {
                const lat = baseLat + (Math.random() - 0.5) * spread;
                const lng = baseLng + (Math.random() - 0.5) * spread;
                const marker = L.marker([lat, lng]).addTo(currentMap);
                marker.bindPopup(`<b>${attr}</b><br>${day}`);
                markers.push(marker);
            });
            
            if (markers.length > 1) {
                const group = L.featureGroup(markers);
                currentMap.fitBounds(group.getBounds(), { padding: [50, 50] });
            }
        }

        document.addEventListener('DOMContentLoaded', init);
        document.getElementById('modal').addEventListener('click', e => {
            if (e.target === document.getElementById('modal')) closeModal();
        });
        document.addEventListener('keydown', e => {
            if (e.key === 'Escape') closeModal();
        });
    </script>
</body>
</html>

