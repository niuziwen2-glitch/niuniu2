    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        const cities = [
            {
                name: "Kyoto, Japan",
                img: "https://images.unsplash.com/photo-1543857778-c4a1a569e7bd?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=400&q=80",
                desc: "Ancient temples, bamboo forests, and traditional tea houses in Japan's cultural heart.",
                coords: { lat: 35.0116, lng: 135.7681 },
                days: {
                    "Day 1": ["Fushimi Inari Shrine", "Kiyomizu-dera Temple", "Gion District", "Kaiseki Dinner"],
                    "Day 2": ["Arashiyama Bamboo Grove", "Tenryu-ji Temple", "Philosopher's Path", "Nishiki Market"],
                    "Day 3": ["Kinkaku-ji (Golden Pavilion)", "Ryoan-ji Rock Garden", "Nijo Castle", "Geisha Performance"]
                }
            },
            {
                name: "Santorini, Greece",
                img: "https://images.unsplash.com/photo-1566576721346-d4a3b4eaeb55?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=400&q=80",
