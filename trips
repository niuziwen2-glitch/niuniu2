                coords: { lat: -8.3405, lng: 115.0920 },
                days: {
                    "Day 1": ["Ubud Monkey Forest", "Tegallalang Rice Terraces", "Ubud Palace", "Traditional Dance"],
                    "Day 2": ["Tanah Lot Temple", "Uluwatu Cliff Temple", "Seminyak Beach", "Spa Experience"],
                    "Day 3": ["Mount Batur Sunrise", "Tirta Empul Temple", "Nusa Penida Day Trip", "Beach Club"]
                }
            },
            {
                name: "Barcelona, Spain",
                img: "https://images.unsplash.com/photo-1517203627558-2a954f57e0b0?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=400&q=80",
                desc: "Gaudí architecture, Gothic Quarter charm, and Mediterranean beach vibes.",
                coords: { lat: 41.3851, lng: 2.1734 },
                days: {
                    "Day 1": ["Sagrada Família", "Park Güell", "La Rambla", "Gothic Quarter"],
                    "Day 2": ["Casa Batlló", "Passeig de Gràcia", "Barceloneta Beach", "Tapas Tour"],
