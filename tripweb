        // Initialize the cities grid
        function initializeCities() {
            const citiesGrid = document.getElementById('citiesGrid');
            citiesGrid.innerHTML = '';
            
            cities.forEach(city => {
                const cityCard = document.createElement('div');
                cityCard.className = 'city-card pulse';
                cityCard.onclick = () => openTripModal(city);
                
                cityCard.innerHTML = `
                    <div class="city-image" style="background-image: url('${city.image}')"></div>
                    <div class="city-info">
                        <h3>${city.name}</h3>
                        <p>${city.description}</p>
                        <div class="trip-duration">
                            <i class="fas fa-calendar-alt"></i> 3-Day Itinerary
                        </div>
                    </div>
                `;
                
                citiesGrid.appendChild(cityCard);
            });
            
            // Remove pulse animation after initial load
            setTimeout(() => {
                document.querySelectorAll('.pulse').forEach(el => {
                    el.classList.remove('pulse');
                });
            }, 3000);
        }

        // Open trip modal for selected city
        function openTripModal(city) {
            const tripModal = document.getElementById('tripModal');
            const tripInfo = document.getElementById('tripInfo');
            
            // Build trip content
            let tripHTML = `<h2>${city.name}</h2>`;
            
            // Day selector buttons
            tripHTML += `<div class="day-selector">`;
            Object.keys(city.days).forEach((day, index) => {
                tripHTML += `<button class="day-btn ${index === 0 ? 'active' : ''}" onclick="showDay('${day}', '${city.name.replace(/'/g, "\\'")}')">
                    <i class="fas fa-sun"></i> ${day}
                </button>`;
            });
            tripHTML += `</div>`;
            
            // Day content with icons
            const icons = ['fas fa-landmark', 'fas fa-mountain', 'fas fa-umbrella-beach', 'fas fa-utensils', 'fas fa-camera', 'fas fa-wine-glass'];
            Object.keys(city.days).forEach((day, index) => {
                tripHTML += `<div class="day-content ${index === 0 ? 'active' : ''}" id="day-${day.replace(' ', '-')}-${city.name.replace(/[^a-zA-Z0-9]/g, '')}">`;
                tripHTML += `<h3><i class="fas fa-calendar-day"></i> ${day} Adventure</h3>`;
                tripHTML += `<ul class="attractions">`;
                city.days[day].forEach((attraction, idx) => {
                    const icon = icons[idx % icons.length];
                    tripHTML += `<li><i class="${icon}"></i> ${attraction}</li>`;
                });
                tripHTML += `</ul>`;
                tripHTML += `</div>`;
            });
            
            tripInfo.innerHTML = tripHTML;
            
            // Initialize map
            initializeMap(city);
            
            tripModal.style.display = 'block';
            document.body.style.overflow = 'hidden';
            
            // Set share link
            document.getElementById('shareLink').value = window.location.href;
        }

        // Show specific day content and update map
        function showDay(day, cityName) {
            const city = cities.find(c => c.name === cityName);
            const dayKey = day.replace(' ', '-');
            const cityNameKey = cityName.replace(/[^a-zA-Z0-9]/g, '');
            
            // Update active button
            document.querySelectorAll('.day-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // Show active day content
            document.querySelectorAll('.day-content').forEach(content => {
                content.classList.remove('active');
            });
            document.getElementById(`day-${dayKey}-${cityNameKey}`).classList.add('active');
            
            // Update map with markers for this day
            updateMapForDay(city, day);
        }

        // Initialize and display map
        let tripMap = null;
        let markers = [];

        function initializeMap(city) {
            const mapLoading = document.getElementById('mapLoading');
            mapLoading.style.display = 'flex';
            
            // Clear existing map if any
            if (tripMap) {
                tripMap.remove();
            }
            
            // Clear existing markers
            markers = [];
            
            // Create new map
            tripMap = L.map('trip-map').setView([city.coordinates.lat, city.coordinates.lng], 11);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '¬© OpenStreetMap contributors'
            }).addTo(tripMap);
            
            // Add city center marker with custom icon
            const cityMarker = L.marker([city.coordinates.lat, city.coordinates.lng], {
                icon: L.divIcon({
                    className: 'city-marker',
                    html: '<div style="background: linear-gradient(135deg, #6366f1, #ec4899); width: 30px; height: 30px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);">üìç</div>',
                    iconSize: [30, 30],
                    iconAnchor: [15, 15]
                })
            }).addTo(tripMap);
            cityMarker.bindPopup(`<b>${city.name}</b><br><em>City Center</em>`).openPopup();
            markers.push(cityMarker);
            
            // Add markers for Day 1 attractions
            updateMapForDay(city, "Day 1");
            
            // Hide loading after a moment
            setTimeout(() => {
                mapLoading.style.display = 'none';
            }, 800);
        }

        // Update map with markers for specific day
        function updateMapForDay(city, day) {
            // Remove existing attraction markers (keep city center)
            markers.slice(1).forEach(marker => marker.remove());
            markers = [markers[0]]; // Keep only city center marker
            
            const attractions = city.days[day];
            
            // Create coordinates with realistic variations around the city center
            const baseLat = city.coordinates.lat;
            const baseLng = city.coordinates.lng;
            
            // Different spread based on city type
            const spread = city.name.includes('Tokyo') || city.name.includes('New York') ? 0.08 : 0.15;
            
            attractions.forEach((attraction, index) => {
                // Create coordinates with variations
                const lat = baseLat + (Math.random() - 0.5) * spread;
                const lng = baseLng + (Math.random() - 0.5) * spread;
                
                // Custom marker for attractions
                const attractionMarker = L.marker([lat, lng], {
                    icon: L.divIcon({
                        className: 'attraction-marker',
                        html: `<div style="background: linear-gradient(135deg, #ec4899, #8b5cf6); width: 25px; height: 25px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 12px; font-weight: bold; box-shadow: 0 3px 10px rgba(236, 72, 153, 0.4);">${index + 1}</div>`,
                        iconSize: [25, 25],
                        iconAnchor: [12.5, 12.5]
                    })
                }).addTo(tripMap);
                
                attractionMarker.bindPopup(`<b>${attraction}</b><br><em>${day} - ${city.name}</em>`);
                markers.push(attractionMarker);
            });
            
            // Fit bounds to show all markers with padding
            if (markers.length > 1) {
                const group = L.featureGroup(markers);
                tripMap.fitBounds(group.getBounds(), { padding: [60, 60] });
            }
        }

        // Close trip modal
        function closeTripModal() {
            document.getElementById('tripModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Close modal when clicking outside
        document.getElementById('tripModal').onclick = function(e) {
            if (e.target === this) {
                closeTripModal();
            }
        };

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', () => {
            initializeCities();
            document.getElementById('shareLink').value = window.location.href;
            
            // Add copy functionality to share link
            const shareInput = document.getElementById('shareLink');
            shareInput.addEventListener('click', function() {
                this.select();
                document.execCommand('copy');
                
                // Show copied feedback
                const originalValue = this.value;
                this.value = '‚úÖ Link copied to clipboard!';
                setTimeout(() => {
                    this.value = originalValue;
                }, 2000);
            });
        });

        // Handle escape key to close modal
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeTripModal();
            }
        });
    </script>
</body>
</html>

